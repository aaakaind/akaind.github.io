# AKA Industries Platform - Environment Configuration

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:8080
WEB_URL=http://localhost:3000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://akaind:password@localhost:5432/platform
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# ============================================================================
# ELASTICSEARCH
# ============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this
BCRYPT_ROUNDS=10

# OAuth2 / SSO
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# SAML
SAML_ENTRY_POINT=
SAML_CERT=
SAML_CALLBACK_URL=

# ============================================================================
# API KEYS & EXTERNAL SERVICES
# ============================================================================
# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# SendGrid (Email)
SENDGRID_API_KEY=SG....
SENDGRID_FROM_EMAIL=noreply@akaind.ca
SENDGRID_FROM_NAME=AKA Industries

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=akaind-assets

# Cloudflare
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# ============================================================================
# CMS & CONTENT
# ============================================================================
# Contentful
CONTENTFUL_SPACE_ID=
CONTENTFUL_ACCESS_TOKEN=
CONTENTFUL_PREVIEW_TOKEN=

# Strapi
STRAPI_URL=http://localhost:1337
STRAPI_TOKEN=

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# DataDog
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Jaeger (Tracing)
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Prometheus
PROMETHEUS_PORT=9090

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_A_B_TESTING=true
FEATURE_PERSONALIZATION=true
FEATURE_MCP_SESSIONS=true
FEATURE_PARTNER_PORTAL=true
FEATURE_AI_RECOMMENDATIONS=false

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ============================================================================
# MULTI-TENANCY
# ============================================================================
DEFAULT_TENANT_PLAN=starter
MAX_TENANTS_PER_USER=5
TENANT_ISOLATION_MODE=row_level_security

# ============================================================================
# WEBHOOKS
# ============================================================================
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT=30000
WEBHOOK_SIGNATURE_SECRET=your-webhook-secret

# ============================================================================
# STORAGE
# ============================================================================
STORAGE_PROVIDER=s3
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760

# ============================================================================
# CACHE
# ============================================================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_ITEMS=10000

# ============================================================================
# QUEUE
# ============================================================================
QUEUE_PROVIDER=bullmq
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# ============================================================================
# NOTIFICATIONS
# ============================================================================
NOTIFICATION_CHANNELS=email,sms,push
NOTIFICATION_RATE_LIMIT=10

# ============================================================================
# ANALYTICS
# ============================================================================
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=30000

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================
DEBUG=true
MOCK_EXTERNAL_APIS=false
SEED_DATABASE=false
